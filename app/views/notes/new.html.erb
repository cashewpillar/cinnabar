<h1>New Note</h1>

<%= form_with model: @article do |form| %>
  <div>
    <%= form.label :title %> <br>
    <%= form.text_field :title %>
  </div>
  <div>
    <%= form.label :body %> <br>
    <%= form.text_area :body %>
  </div>
  <div>
    <%= form.label :status %> <br>
    <%= form.text_field :status %>
  </div>
  <div>
    <%= form.label :reminder %> <br>
    <%= form.date_field :reminder %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>