<%= form_with model: note do |form| %>
  <div>
    <%= form.label :title %> <br>
    <%= form.text_field :title %>
  </div>
  <div>
    <%= form.label :body %> <br>
    <%= form.text_area :body %>
  </div>
  <div>
    <%= form.label :status %> <br>
    <%= form.text_field :status %>
  </div>
  <div>
    <%= form.label :reminder %> <br>
    <%= form.datetime_field :reminder %>
  </div>

  <% note.errors.full_messages.each do |message| %>
    <div>
      <%= message %>
    </div>
  <% end %>

  <div>
    <%= form.submit %>
  </div>
<% end %>